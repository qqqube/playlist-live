<!DOCTYPE html>
<html>
<body id="log-in">
  <div class="log-in">
      <br/><br/><br/><br/><br/><br/><br/><h2>Log In</h2><br/><br/>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html=>{:class=>"login-form"}) do |f| %>
        <div class="field">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
        <br /><br/>

        <div class="field">
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: "off" %>
        </div>
        <br />

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
          <br />
        <% end %>

        <div class="actions">
          <%= f.submit "Log In", class: "button" %>
        </div>
      <% end %>
      <br /><br/>

    </div>
  </body>
</html>
